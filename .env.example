# Anthropic API Key
# https://console.anthropic.com/ 에서 발급
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Notion Integration Token
# https://www.notion.so/my-integrations 에서 생성
NOTION_TOKEN=your_notion_integration_token_here

# Notion Database ID
# setup_notion.py 실행 후 출력되는 값을 입력
NOTION_DATABASE_ID=your_notion_database_id_here

# ──────────────────────────────────────────────────────────────────────────────
# 뉴스레터 자동화 설정 (newsletter.py 사용 시)
# ──────────────────────────────────────────────────────────────────────────────

# RSS 피드 URL (쉼표로 구분, 여러 개 가능)
# 요즘IT RSS 예시: https://yozm.kakao.com/magazine/rss
# 다른 피드 추가 가능: https://blog.example.com/feed.xml
RSS_FEEDS=https://yozm.kakao.com/magazine/rss

# 이메일 뉴스레터 설정 (IMAP 방식)
# Gmail: imap.gmail.com / Naver: imap.naver.com / Kakao: imap.kakao.com
EMAIL_IMAP_SERVER=imap.gmail.com
EMAIL_ADDRESS=your_email@gmail.com

# Gmail 사용 시: 앱 비밀번호 (일반 비밀번호 아님!)
# Google 계정 → 보안 → 2단계 인증 → 앱 비밀번호에서 생성
EMAIL_APP_PASSWORD=your_app_password_here

# 처리할 뉴스레터 발신자 이메일 (쉼표로 구분)
# 예: NEWSLETTER_SENDERS=news@yozm.it,newsletter@deeplearning.ai
NEWSLETTER_SENDERS=news@yozm.it

# 이메일 검색 기간 (일 단위, 기본값: 7)
EMAIL_DAYS_BACK=7
